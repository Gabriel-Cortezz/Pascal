{$R *.dfm}

procedure TForm1.btnCriarClick(Sender: TObject);

  var FormularioCriar : TFormularioCriar;

begin

  FormularioCriar := TFormularioCriar.Create(nil);
  FormularioCriar.ShowModal;

end;

procedure TForm1.btnLerClick(Sender: TObject);
begin
  ShowMessage('dados');
